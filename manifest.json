{
  "manifest_version": 3,
  "name": "QuickResume",
  "version": "1.0",
  "description": "Scrapes screen content and alters a resume PDF in AWS S3 using ChatGPT API",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
